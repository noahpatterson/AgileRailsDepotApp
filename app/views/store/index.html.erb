<% if notice %>
  <p id="notice">
    <%= notice %>
  </p>
<% end %>

<h1>Your Pragmatic Catalog</h1>
<% cache('test') do %>
  <% @products.each do |product| %>
    <% cache(product) do %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3>
          <%= link_to(product.title , product) %>
        </h3>
        <p> <%= sanitize(product.description) %> </p>
        <div class="price_line">
          <span class="price">
            <%= number_to_currency(product.price) %>
          </span>
        </div>
      </div>
    <% end %>
  <% end %> 
<% end %>